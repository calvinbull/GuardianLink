<header>
    <!-- Bootstrap navbar class used as template here -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">GuardianLink</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav mr-auto">

            <!-- 'activePage' variable passed in routes highlights current page on navbar -->
            <li class="nav-item <%= currentPage === 'home' ? 'active' : '' %>">
              <a class="nav-link" href="/">Home</a>
            </li>

            <!-- Check whether a user is logged in or not based on res.locals.isAuthenticated from app.js -->
            <% if (isAuthenticated) { %>
              <!-- Elements to show when user is logged in -->
              <li class="nav-item <%= currentPage === 'connections' ? 'active' : '' %>">
                <a class="nav-link" href="/connections">Connections</a>
              </li>
              <li class="nav-item">
                <button type="button" class="btn btn-primary" id="logout">Logout</button>
              </li>
              
            <% } else { %>
              <!-- Elements to show when user is not logged in -->
              <li class="nav-item <%= currentPage === 'login' ? 'active' : '' %>">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item <%= currentPage === 'register' ? 'active' : '' %>">
                <a class="nav-link" href="/register">Registration</a>
              </li>
            <% } %>
            
          </ul>
          
        </div>
      </nav>
</header>